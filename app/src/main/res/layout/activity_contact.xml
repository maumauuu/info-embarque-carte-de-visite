<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SeeContactFragment">

    <Button
        android:id="@+id/ChooseContact"
        android:layout_marginLeft="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Contact"
        android:onClick="contact"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <RelativeLayout
        android:id="@+id/carte_other"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gold"
        android:layout_weight="2"
        android:layout_margin="15dp"
        android:orientation="vertical">


            <com.CDV.util.RoundedImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgContact"
                 />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#CECECE"
            android:text="Email"
            android:padding="5dp"
            android:textSize="13dp"
            android:ems="10"
            android:background="@android:color/transparent"
            android:id="@+id/textemail"
            android:layout_below="@+id/textname"
            android:layout_alignStart="@+id/textname"
            android:layout_marginTop="76dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#CECECE"
            android:text="Numero"
            android:textSize="15dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:ems="15"
            android:id="@+id/textnumero"
            android:layout_below="@+id/textemail"
            android:layout_alignStart="@+id/textemail" />

        <TextView
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:text="Address"
                android:textStyle="italic"
                android:textColor="#CECECE"
                android:background="@android:color/transparent"
                android:ems="15"
                android:padding="10dp"
                android:textSize="15dp"
                android:id="@+id/textadresse"
            android:layout_width="match_parent"
                android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="102dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textColor="#CECECE"
            android:text="Name"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textname"
            android:layout_alignBottom="@+id/imgContact"
            android:layout_toEndOf="@+id/imgContact"
            android:layout_marginStart="48dp" />


    </RelativeLayout>


</LinearLayout>
